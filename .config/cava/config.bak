## Configuration file for CAVA.
# Place this in ~/.config/cava/config

[general]
framerate = 60
bars = 0
autosens = 1
overshoot = 0
sensitivity = 100
lower_cutoff_freq = 50
higher_cutoff_freq = 10000

[input]
method = pulse
source = auto

[output]
method = ncurses
channels = stereo
mono_option = average
reverse = 0
raw_target = /dev/stdout
data_format = binary
bit_format = 16bit
ascii_max_range = 1000

[smoothing]
# Smooth like those old VFD displays
monstercat = 1
waves = 0
gravity = 100
ignore = 0

[eq]
1 = 1
2 = 1
3 = 1
4 = 1
5 = 1
[color]
gradient = 1
gradient_count = 6
gradient_color_1 = ''
gradient_color_2 = ''
gradient_color_3 = ''
gradient_color_4 = ''
gradient_color_5 = ''
gradient_color_6 = ''
